{
  "include": ["src/*"],
  "exclude": ["node_modules"],
  "compilerOptions": {
    "declaration": true,
    "declarationDir": ".",
    "declarationMap": false,
    "exactOptionalPropertyTypes": true,
    "module": "ESNext",
    "moduleResolution": "nodenext",
    "skipDefaultLibCheck": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "target": "ESNext"
  }
}
